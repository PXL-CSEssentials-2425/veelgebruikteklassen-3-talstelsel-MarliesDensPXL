<Window x:Class="Talstelsel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Talstelsel"
        mc:Ignorable="d"
        Title="Het hexadecimale talstelsel" Height="450" Width="800">
    <Grid>
        <Label Content="Hexadecimale waarde" FontWeight="Bold"  HorizontalAlignment="Left" Margin="112,147,0,0" VerticalAlignment="Top"/>
        <Label Content="Decimale waarde" FontWeight="Bold" HorizontalAlignment="Left" Margin="424,147,0,0" VerticalAlignment="Top"/>
        <TextBox Name="inputTextBox" HorizontalAlignment="Left" Margin="112,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyDown="inputTextBox_KeyDown"/>
        <TextBox Name="outputTextBox" HorizontalAlignment="Left" Margin="424,195,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Name="convertButton" IsDefault="True" Content="Zet om" HorizontalAlignment="Left" Margin="112,268,0,0" VerticalAlignment="Top" Height="45" Width="120" Click="convertButton_Click"/>
        <Button Name="againButton" Content="Opnieuw" HorizontalAlignment="Left" Margin="306,268,0,0" VerticalAlignment="Top" Height="45" Width="115" Click="againButton_Click"/>
        <Button Name="closeButton" Content="Afsluiten" HorizontalAlignment="Left" Margin="484,268,0,0" VerticalAlignment="Top" Height="45" Width="157" Click="closeButton_Click"/>

    </Grid>
</Window>
